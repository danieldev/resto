<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/rating_list_image"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_delete_black_48dp" >
    </ImageView>

    <TextView
        android:id="@+id/rating_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/rating_list_image"
        android:layout_toLeftOf="@+id/rating_list_rating_bar"
        android:layout_toRightOf="@+id/rating_list_image"
        android:layout_toStartOf="@+id/rating_list_rating_bar"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/placeholder"
        android:textSize="24sp" >
    </TextView>

    <RatingBar
        android:id="@+id/rating_list_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:numStars="5"
        android:stepSize="0.5" />

</RelativeLayout>