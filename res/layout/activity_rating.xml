<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/rating_headline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:id="@+id/rating_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/rating_welcome_text"
            android:textSize="28sp" />

        <Button
            android:id="@+id/rating_submit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="2"
            android:background="@color/green_transparent"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/rating_submit"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/rating_listview"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rating_headline" />

</RelativeLayout>